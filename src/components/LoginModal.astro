---
import { getLangFromUrl, useTranslations } from '@/i18n/utils';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
const callbackPath = `/${lang}/auth/callback`;
---

<dialog
  data-login-modal
  class="fixed inset-0 z-50 m-auto w-full max-w-sm rounded-xl border border-gray-200 bg-white p-0 shadow-2xl backdrop:bg-black/50"
>
  <div class="p-6">
    <h2 class="text-xl font-bold">{t('auth.login.title')}</h2>
    <p class="mt-2 text-sm text-gray-600">{t('auth.login.description')}</p>

    <button
      type="button"
      data-login-google
      data-callback-path={callbackPath}
      class="mt-6 flex w-full cursor-pointer items-center justify-center gap-3 rounded-lg border border-gray-300 bg-white px-4 py-3 text-sm font-medium text-gray-700 transition-colors hover:bg-gray-50"
    >
      <svg viewBox="0 0 24 24" class="h-5 w-5" aria-hidden="true">
        <path
          d="M22.56 12.25c0-.78-.07-1.53-.2-2.25H12v4.26h5.92a5.06 5.06 0 0 1-2.2 3.32v2.77h3.57c2.08-1.92 3.28-4.74 3.28-8.1z"
          fill="#4285F4"
        />
        <path
          d="M12 23c2.97 0 5.46-.98 7.28-2.66l-3.57-2.77c-.98.66-2.23 1.06-3.71 1.06-2.86 0-5.29-1.93-6.16-4.53H2.18v2.84C3.99 20.53 7.7 23 12 23z"
          fill="#34A853"
        />
        <path
          d="M5.84 14.09c-.22-.66-.35-1.36-.35-2.09s.13-1.43.35-2.09V7.07H2.18C1.43 8.55 1 10.22 1 12s.43 3.45 1.18 4.93l2.85-2.22.81-.62z"
          fill="#FBBC05"
        />
        <path
          d="M12 5.38c1.62 0 3.06.56 4.21 1.64l3.15-3.15C17.45 2.09 14.97 1 12 1 7.7 1 3.99 3.47 2.18 7.07l3.66 2.84c.87-2.6 3.3-4.53 6.16-4.53z"
          fill="#EA4335"
        />
      </svg>
      {t('auth.login.google')}
    </button>

    <button
      type="button"
      data-login-close
      class="mt-3 w-full cursor-pointer rounded-lg px-4 py-2 text-sm text-gray-500 transition-colors hover:bg-gray-100"
    >
      {t('auth.login.close')}
    </button>
  </div>
</dialog>

<script>
  import { supabase } from '@/lib/supabase';

  const PENDING_KEY = 'behangmotief:pending-favorite';
  const REDIRECT_KEY = 'behangmotief:auth-redirect';

  const dialog = document.querySelector<HTMLDialogElement>('[data-login-modal]');
  const googleBtn = document.querySelector('[data-login-google]');
  const closeBtn = document.querySelector('[data-login-close]');

  // Global function called by favorites.ts when user is not authenticated
  (window as any).__showLoginModal = (pendingPayload?: unknown) => {
    if (!dialog) return;

    if (pendingPayload) {
      sessionStorage.setItem(PENDING_KEY, JSON.stringify(pendingPayload));
    }

    dialog.showModal();
  };

  googleBtn?.addEventListener('click', async () => {
    // Store current URL so callback can redirect back
    sessionStorage.setItem(REDIRECT_KEY, window.location.href);
    const callbackPath = (googleBtn as HTMLElement).dataset.callbackPath || '/nl/auth/callback';

    await supabase.auth.signInWithOAuth({
      provider: 'google',
      options: {
        redirectTo: `${window.location.origin}${callbackPath}`,
      },
    });
  });

  closeBtn?.addEventListener('click', () => {
    dialog?.close();
    sessionStorage.removeItem(PENDING_KEY);
  });

  // Close on backdrop click
  dialog?.addEventListener('click', (e) => {
    if (e.target === dialog) {
      dialog.close();
      sessionStorage.removeItem(PENDING_KEY);
    }
  });
</script>
