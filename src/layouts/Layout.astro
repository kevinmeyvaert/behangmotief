---
import Footer from '@/components/Footer.astro';
import Analytics from '@vercel/analytics/astro';
import SpeedInsights from '@vercel/speed-insights/astro';
import '../styles/global.css';
import { getAlternateUrls } from '@/i18n/utils';
import { defaultLang } from '@/i18n/ui';

interface Props {
  title: string;
  description: string;
  locale: string;
}

const { title, description, locale } = Astro.props;
const siteUrl = Astro.site?.toString().replace(/\/$/, '') || 'https://behangmotief.be';
const alternateUrls = getAlternateUrls(Astro.url, siteUrl);
---

<!doctype html>
<html lang={locale}>
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/png" href="/favicon.png" />
    <link rel="sitemap" href="/sitemap-index.xml" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>

    {/* Hreflang tags for language variants */}
    {Object.entries(alternateUrls).map(([lang, url]) => (
      <link rel="alternate" hreflang={lang} href={url} />
    ))}
    {/* x-default pointing to the default language (Dutch) */}
    <link rel="alternate" hreflang="x-default" href={alternateUrls[defaultLang]} />
  </head>
  <body>
    <slot />
    <Footer />
    <Analytics />
    <SpeedInsights />
  </body>
</html>

<style is:global>
  :root {
    --accent: 136, 58, 234;
    --accent-light: 224, 204, 250;
    --accent-dark: 49, 10, 101;
    --accent-gradient: linear-gradient(
      45deg,
      rgb(var(--accent)),
      rgb(var(--accent-light)) 30%,
      white 60%
    );
  }
</style>
